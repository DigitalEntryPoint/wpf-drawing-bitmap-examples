<Window
    x:Class="BasicBitmapManipulation.KimiPaintWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:BasicBitmapManipulation"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Kimi Paint Window"
    Width="800"
    Height="600"
    WindowStartupLocation="CenterOwner"
    mc:Ignorable="d">
    <Grid Background="LightGray">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="28" />
        </Grid.RowDefinitions>

        <Image x:Name="image" RenderOptions.BitmapScalingMode="NearestNeighbor" />

        <StatusBar Grid.Row="1" VerticalAlignment="Bottom">
            <StatusBarItem Width="160">
                <TextBlock x:Name="statusText1" Text="On Screen (X:1000,Y:1000)" />
            </StatusBarItem>
            <Separator />
            <StatusBarItem Width="160">
                <TextBlock x:Name="statusText2" Text="On Image (X:1000,Y:1000)" />
            </StatusBarItem>
            <StatusBarItem>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <Label FontSize="10">Scale</Label>
                    <ComboBox
                        Grid.Column="1"
                        MinWidth="80"
                        VerticalAlignment="Center" />
                </Grid>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>
