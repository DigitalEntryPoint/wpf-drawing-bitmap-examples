<Window
    x:Class="BasicBitmapManipulation.LoopWindowTest4"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:BasicBitmapManipulation"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="LoopWindowTest4"
    Width="800"
    Height="450"
    mc:Ignorable="d">
    <Grid Background="LightBlue">
        <Image x:Name="theScreen" RenderOptions.BitmapScalingMode="NearestNeighbor" />
        <StackPanel
            MinWidth="128"
            Margin="4"
            HorizontalAlignment="Left">
            <Label Content="Parameters:" FontWeight="SemiBold" />
            <Label Content="Line thickness:" />
            <Slider
                x:Name="slider1"
                Minimum="0.1"
                TickPlacement="BottomRight" />
            <Label Content="Angel:" />
            <Slider
                x:Name="slider2"
                Maximum="360"
                Minimum="0.1"
                Value="0" />
        </StackPanel>
    </Grid>
</Window>



