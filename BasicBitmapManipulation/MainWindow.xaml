<Window
    x:Class="BasicBitmapManipulation.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:BasicBitmapManipulation"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Bitmap R and D : MainWindow"
    Width="800"
    Height="450"
    mc:Ignorable="d">
    <Grid Style="{DynamicResource realBg}">
        <ToolBar VerticalAlignment="Top">
            <ToolBarPanel ButtonBase.Click="BaseButton_Click" Orientation="Horizontal">
                <!--  add tool bar items here  -->
                <Button
                    Content="Kimi Paint"
                    Style="{DynamicResource foundryKatana}"
                    Tag="KimiPaint" />
                <Button
                    Content="Animated Noise"
                    Style="{DynamicResource foundryKatana}"
                    Tag="LoopWindowTest1" />
                <Button
                    Content="Rotation"
                    Style="{DynamicResource foundryKatana}"
                    Tag="LoopWindowTest2" />
                <Button
                    Content="Cube Rotation"
                    Style="{DynamicResource foundryKatana}"
                    Tag="LoopWindowTest3" />
                <Button
                    Content="Drawing Lines"
                    Style="{DynamicResource foundryKatana}"
                    Tag="LoopWindowTest4" />
            </ToolBarPanel>
        </ToolBar>
    </Grid>
</Window>
